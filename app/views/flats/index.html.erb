<div class="container">
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-4 border">
        <img src="https://picsum.photos/200/200" width="100%" height="200" alt="" class="mb-3">
        <h4><%= flat.name %></h4>
        <p><%= flat.address %></p>
        <div class="d-flex justify-content-between">
          <p><i class="fas fa-user-friends pr-2"> </i><%= flat.number_of_guests %></p>
          <p><i class="fas fa-pound-sign pr-1"> </i><%= flat.price_per_night %></p>
        </div>
        <div class="text-center bg-success">
          <p><%= link_to "More info", flat_path(flat), class: "text-white" %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
